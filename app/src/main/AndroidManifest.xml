<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.anugrahzeputra.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/githubuserlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/githubuserlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApp">
        <activity android:name=".layouts.GithubUserDesc" />
        <activity
            android:name=".layouts.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>